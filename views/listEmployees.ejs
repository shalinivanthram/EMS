<script>
    $(document).ready(function(){
        
        populateEmployees("/employees/getEmployeeList");

        $("#searchButton").button().click(function(){
            var paramName = $("#searchParamName").val();
            var paramValue = $("#searchParamValue").val();
            if(paramName && paramValue){
                //alert(paramName +":"+ paramValue);
                populateEmployees("/employees/getEmployeeList?paramName="+paramName+"&paramValue="+paramValue);
            }else if((paramName=='') && (paramValue=='')){
                populateEmployees("/employees/getEmployeeList");
            }
        });
        
    });
function populateEmployees(url){
    $.ajax({
            method: "GET",
            url: url,
            contentType: 'application/json',
            success: function (result) {
                $('#employeeList').dataTable().fnDestroy();
                $('#employeeList').dataTable({
                    "aaData": result["DATA"],
                    "aoColumns": [
                    { "sTitle": "Name","class" : "center" },
                    { "sTitle": "Email","class" : "center" },
                    { "sTitle": "Phone","class" : "center" },
                    { "sTitle": "DOJ","class" : "center" },
                    { "sTitle": "Action","class" : "center" }
                    ],
                    "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                        $(nRow).children().each(function (index, td) {
                            $(this).addClass('center');
                        });
                        $(".dataTables_filter").css("display","none");  
                    }
                });
            }
        });
      
}
</script>

