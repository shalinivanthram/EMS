<div class="row">
        <div class="well col-md-5 center login-box">
             <form class="form-horizontal" action="/employees/updateEmp" method="post">
                <fieldset>
                   <table class="table">
                   	<tr>
				        <td>First Name</td>
				        <td class="center">
				        	<input class="search-query form-control col-md-10" name="firstName" id="firstName" type="text" value="<%=employee.firstName %>">
				        </td>
				    </tr>
				    <tr>
				        <td>Last Name</td>
				        <td class="center">
				        	<input class="search-query form-control col-md-10" name="lastName" id="lastName" type="text" value="<%=employee.lastName %>">
				        </td>
				    </tr>
				    <tr>
				        <td>Email id</td>
				        <td class="center">
				        	<input class="search-query form-control col-md-10" name="email" id="email" type="text" value="<%=employee.email %>">
				        </td>
				    </tr>
				    <tr>
				        <td>Phone</td>
				        <td class="center">
				        	<input class="search-query form-control col-md-10" name="phone" id="phone" type="text" value="<%=employee.phone %>">
				        </td>
				    </tr>
				    <tr>
				        <td>Date of Joining</td>
				        <td class="center">
				        	<input name="doj" id="doj" type="text" value="<%=employee.doj %>">
				        </td>
				    </tr>
				    <tr>
				        <td>User Name</td>
				        <td class="center">
				        	<input class="search-query form-control col-md-10" name="userName" id="userName" type="text" value="<%=employee.userName %>" readonly="true">
				        </td>
				    </tr>
				    <tr>
				        <td>Password</td>
				        <td class="center">
				        	<input type="password" class="search-query form-control col-md-10" name="password" id="password" type="text" value="<%=employee.password %>">
				        </td>
				    </tr>
				    <tr>
				        <td>Role
				        <td class="center">
				        	<div class="checkbox">
			                        <input type="checkbox" name="isAdmin" id="isAdmin" <%=(employee.isAdmin != null && employee.isAdmin === 'Y') ? "checked ='"+true+"'" : value=''%> >Is Admin</input>
			                </div>
				        </td>
				    </tr>
                   </table>
                    <!-- sign up link -->
                    <p class="center col-md-5">
                        <button type="submit" class="btn btn-primary" id="updateEmp"><%=__('update')%></button>
                    </p>
                </fieldset>
            </form>
